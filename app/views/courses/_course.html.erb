<div id="<%= dom_id course %>">
    
    <!-- Show course card-->
    <div class="border m-2">
        <!-- Course title-->
        <div class="text-xl p-2">
            <h1 class="font-bold"><%= course.title %></h1>
        </div>

        <!-- Course detail-->
        <div class="border bg-white m-2 p-2">
            <%= truncate(strip_tags(course.content.to_s.html_safe), length: 700) %>
        </div>
        
        <!-- Exercises Feed-->
        <div class="border bg-white m-2">
            <%= render "courses/shared/exercises" %>
        </div>
    </div>
</div>
